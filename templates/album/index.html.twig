 <h1>album index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
    {% for album in albums %}
        <tr>
            <td>{{ album.name }}</td>
            <td>
                <a href="{{ path('app_album_show', {'id': album.id}) }}">show</a>
                <a href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_album_new') }}">Create new</a>
